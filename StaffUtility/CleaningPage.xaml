<Page
    x:Class="StaffUtility.CleaningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StaffUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:Model"
    mc:Ignorable="d">

    <Grid Name="g1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Name="cleaning_go_home" Content="Home" HorizontalAlignment="Center" Margin="25,711,25,0" VerticalAlignment="Top" Height="73" Width="196" Click="service_go_home_Click"/>
        <TextBox Name="cleaning_header" HorizontalAlignment="Center" Margin="25,117,25,0" Text="This is the cleaning page" VerticalAlignment="Top"/>
        <ListView Name="issue_list" ItemsSource="{x:Bind il}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="396" Width="310" Margin="25,204,25,400">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local1:Issue">
                    <TextBlock Text="{x:Bind RoomNr}"/>
                    

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
